{
	"name": "offboarding",
	"version": "1.0.0",
	"private": true,
	"scripts": {
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "lint": "eslint --ignore-path .gitignore .",
        "prettier": "prettier --ignore-path .gitignore \"**/*.+(js)\"",
        "format": "yarn prettier --write",
        "check-format": "yarn prettier --list-different",
        "validate": "yarn check-format && yarn lint && yarn test && yarn build",
        "setup": "yarn install && yarn validate",
        "predev": "rm -rf .next",
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "dockerized:build": "next build && next start",
        "dockerized:build-debug": "next build --debug && next start",
        "check-types": "tsc"
	},
	"dependencies": {
		"@emotion/react": "^11.10.5",
		"@emotion/styled": "^11.10.5",
		"@geopagos/react-oz-wizard": "^2.0.1",
		"@mui/material": "^5.11.3",
		"next": "^13.1.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-query": "^3.39.2"
	},
	"devDependencies": {
		"@types/node": "18.11.18",
		"typescript": "4.9.4"
	}
}
